
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="img/favicon.png">
    <title>FlatLab - Flat & Responsive Bootstrap Admin Template</title>
    <!-- Bootstrap core CSS -->
    <link href="/Content/Admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/Admin/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="/Content/Admin/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="/Content/Admin/css/style.css" rel="stylesheet">
    <link href="/Content/Admin/css/style-responsive.css" rel="stylesheet" />
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <section>
        <div class="panel panel-primary">
            <div class="panel-heading"> Yeni Parola Ata </div>
            <div class="panel-body">
                <form class="form-horizontal" action="/Uye/ParolamiUnuttum" method="post" role="form">

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Kullanıcı Adı</label>
                        <div class="col-lg-6">
                            <input type="text" class="form-control" name="KullaniciAdi" id="rt-pwd" placeholder=" Kullanıcı adınızı girin">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Gizli soru</label>
                        <div class="col-lg-6">
                            <input type="text" class="form-control" id="rt-pwd" name="Gizlisoru" placeholder=" Gizli soruyu girin">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Gizli cevap</label>
                        <div class="col-lg-6">
                            <input type="text" class="form-control" id="rt-pwd" name="Gizlicevap" placeholder=" Gizli cevabı girin">
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-lg-2 control-label">Yeni Parola</label>
                        <div class="col-lg-6">
                            <input type="password" class="form-control" id="n-pwd" name="Parola" placeholder="Yeni Parolayı girin ">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Parolayı Tekrarla</label>
                        <div class="col-lg-6">
                            <input type="password" class="form-control" id="rt-pwd" name="reParola" placeholder=" Yeni Parolayı tekrar girin">
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button type="submit" class="btn btn-info">Kaydet</button>
                            <button type="button" class="btn btn-default">İptal</button>
                        </div>
                    </div>
                </form>
                @if (ViewBag.Mesaj != null)
                {
                    <p style="color:red">@ViewBag.Mesaj  </p>
                }
            </div>
        </div>
    </section>
</body>
</html>
