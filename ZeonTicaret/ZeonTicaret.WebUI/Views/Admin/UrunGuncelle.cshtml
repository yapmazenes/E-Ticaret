@{
    ViewBag.Title = "UrunGuncelle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model ZeonTicaret.WebUI.Models.Urun

@section head{


    <link rel="stylesheet" type="text/css" href="/Content/Admin/assets/bootstrap-datepicker/css/datepicker.css" />
    <link rel="stylesheet" type="text/css" href="/Content/Admin/assets/bootstrap-timepicker/compiled/timepicker.css" />
    <link rel="stylesheet" type="text/css" href="/Content/Admin/assets/bootstrap-colorpicker/css/colorpicker.css" />
    <link rel="stylesheet" type="text/css" href="/Content/Admin/assets/bootstrap-daterangepicker/daterangepicker-bs3.css" />
    <link rel="stylesheet" type="text/css" href="/Content/Admin/assets/bootstrap-datetimepicker/css/datetimepicker.css" />
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Ürün Ekle
            </header>
            <div class="panel-body">
                <form role="form" action="/Admin/UrunGuncelle" method="post" class="form-horizontal tasi-form">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-group has-success">
                        <label class="col-lg-2 control-label">Ürün Adı</label>
                        <div class="col-lg-10">
                            <input type="text" name="Adi" value="@Model.Adi" placeholder="Ürün adını giriniz" id="f-name" class="form-control">

                        </div>
                    </div>
                    <div class="form-group has-error">
                        <label class="col-lg-2 control-label">Açıklama</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="Açıklama giriniz" value="@Model.Aciklama" name="Aciklama" id="l-name" class="form-control">

                        </div>
                    </div>
                    <div class="form-group has-warning">
                        <label class="col-lg-2 control-label">Alış Fiyatı</label>
                        <div class="col-md-2">
                            <div id="spinner1">

                                <input type="number" min="0" value="@Model.AlisFiyati" name="AlisFiyati" class="spinner-input form-control" maxlength="3">


                            </div>
                        </div>
                    </div>
                    <div class="form-group has-warning">
                        <label class="col-lg-2 control-label">Satış Fiyatı</label>
                        <div class="col-md-2">
                            <div id="spinner1">

                                <input type="number" min="0" value="@Model.SatisFiyati" name="SatisFiyati" class="spinner-input form-control" maxlength="3">


                            </div>
                        </div>
                    </div>
                    <div class="form-group has-warning">
                        <label class="col-lg-2 control-label">Kategoriler</label>
                        <div class="col-md-2">
                            <div id="spinner1">
                                <select class="form-control m-bot15" name="KategoriID">
                                    @foreach (ZeonTicaret.WebUI.Models.Kategori ktg in ViewBag.Kategoriler)
                                    {
                                        if (ktg.Id == Model.KategoriID)
                                        {
                                            <option selected="selected" value="@ktg.Id">@ktg.Adi</option>
                                        }
                                        <option value="@ktg.Id">@ktg.Adi</option>
                                    }

                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group has-warning">
                        <label class="col-lg-2 control-label">Markalar</label>
                        <div class="col-md-2">
                            <div id="spinner1">
                                <select class="form-control m-bot15" name="MarkaID">
                                    @foreach (ZeonTicaret.WebUI.Models.Marka mrk in ViewBag.Markalar)
                                    {
                                        if (mrk.Id == Model.MarkaID)
                                        {
                                            <option selected="selected" value="@mrk.Id">@mrk.Adi</option>
                                        }
                                        <option value="@mrk.Id">@mrk.Adi</option>
                                    }

                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-primary" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>