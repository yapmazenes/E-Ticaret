@{
    ViewBag.Title = "UrunResimEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model int
@section head{
    <link rel="stylesheet" type="text/css" href="/Content/Admin/assets/bootstrap-fileupload/bootstrap-fileupload.css" />
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">

            <header class="panel-heading">
                Ürün Resmi Ekle
            </header>

            <div class="alert alert-info alert-block fade in">

                <h4>
                    <i class="icon-ok-sign"></i>
                    @ViewBag.UrunAdi
                </h4>
                <p>@ViewBag.Aciklama</p>
            </div>
            <div class="form-group">
                <form class="form-horizontal tasi-form" enctype="multipart/form-data" action="/Admin/UrunResimEkle/" method="post">

                    <input type="hidden" name="uId" value="@Model" />


                    <div class="form-group">
                        <label class="control-label col-md-3">Ürün Resmi</label>
                        <div class="controls col-md-9">
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <span class="btn btn-white btn-file">
                                    <span class="fileupload-new"><i class="icon-paper-clip"></i> Resim seç</span>
                                    <span class="fileupload-exists"><i class="icon-undo"></i> Değiştir</span>

                                    <input type="file" name="fileUpload" class="default" />
                                </span>
                                <span class="fileupload-preview" style="margin-left:5px;"></span>
                                <a href="#" class="close fileupload-exists" data-dismiss="fileupload" style="float: none; margin-left:5px;"></a>

                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" style="margin-left:150px" type="submit">Kaydet</button>
                            @if (ViewBag.Sonuc == 1)
                            {
                                <label style="font-size:16px; color:greenyellow;margin-left:5px">Resim Eklendi</label>
                            }

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">


                        </div>
                    </div>

                </form>
            </div>
        </section>
    </div>
</div>


