
@{
    ViewBag.Title = "UrunOzellikleri";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model IEnumerable<ZeonTicaret.WebUI.Models.UrunOzellik>

<section class="panel">
    <header class="panel-heading">
        Ürün Özellik
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group">

                    <a id="editable-sample_new" class="btn btn-primary green" href="/Admin/UrunOzellikEkle">
                        Yeni Ürün Özelliği <i class="icon-plus"></i>
                    </a>
                </div>
                <div class="btn-group pull-right">
                    <button class="btn dropdown-toggle" data-toggle="dropdown">
                        Araçlar <i class="icon-angle-down"></i>
                    </button>

                    <ul class="dropdown-menu pull-right">
                        <li><a href="#">Print</a></li>
                        <li><a href="#">Save as PDF</a></li>
                        <li><a href="#">Export to Excel</a></li>
                    </ul>
                </div>
            </div><br />
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Özellik Tip Adı</th>
                        <th>Özellik Değer Adı</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var uoz in Model)
                    {
                        <tr>
                            @if (uoz.Urun!=null)
                            {
                                <td>@uoz.Urun.Adi</td>
                            }
                            @if (uoz.OzellikTip != null)
                            {
                                <td>@uoz.OzellikTip.Adi</td>
                            } 
                            @if (uoz.OzellikDeger != null)
                            {
                                <td>@uoz.OzellikDeger.Adi</td>
                            }
                         @if (uoz.Urun != null && uoz.OzellikTip != null && (uoz.OzellikDeger != null))
                         {
                             <td><a class="btn btn-primary btn-xs" href="#"><i class="icon-pencil"></i></a></td>
                            <td><a class="btn btn-danger btn-xs" href="@Url.Action("UrunOzellikSil", "Admin", new {urunId=uoz.UrunID,tipId=uoz.OzellikTipID,degerId=uoz.OzellikDegerID })"><i class="icon-trash"></i></a></td>
                         }
                            
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</section>