@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@section head{


<link rel="stylesheet" type="text/css" href="/Content/Admin/assets/bootstrap-datepicker/css/datepicker.css" />
<link rel="stylesheet" type="text/css" href="/Content/Admin/assets/bootstrap-timepicker/compiled/timepicker.css" />
<link rel="stylesheet" type="text/css" href="/Content/Admin/assets/bootstrap-colorpicker/css/colorpicker.css" />
<link rel="stylesheet" type="text/css" href="/Content/Admin/assets/bootstrap-daterangepicker/daterangepicker-bs3.css" />
<link rel="stylesheet" type="text/css" href="/Content/Admin/assets/bootstrap-datetimepicker/css/datetimepicker.css" />
    }
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Ürün Ekle
            </header>
            <div class="panel-body">
                <form role="form" action="/Admin/UrunEkle" method="post" class="form-horizontal tasi-form">
                    <div class="form-group has-success">
                        <label class="col-lg-2 control-label">Ürün Adı</label>
                        <div class="col-lg-10">
                            <input type="text" name="Adi" placeholder="Ürün adını giriniz" id="f-name" class="form-control">
                           
                        </div>
                    </div>
                    <div class="form-group has-error">
                        <label class="col-lg-2 control-label">Açıklama</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="Açıklama giriniz" name="Aciklama" id="l-name" class="form-control">
                           
                        </div>
                    </div>
                    <div class="form-group has-warning">
                        <label class="col-lg-2 control-label">Alış Fiyatı</label>
                        <div class="col-md-2">
                            <div id="spinner1">
                     
                                    <input type="number" min="0" name="AlisFiyati" class="spinner-input form-control" maxlength="3">

                               
                            </div>
                        </div>
                    </div>
                    <div class="form-group has-warning">
                        <label class="col-lg-2 control-label">Satış Fiyatı</label>
                        <div class="col-md-2">
                            <div id="spinner1">
                               
                                    <input type="number" min="0" name="SatisFiyati" class="spinner-input form-control" maxlength="3">

                               
                            </div>
                        </div>
                    </div>
                    <div class="form-group has-warning">
                        <label class="col-lg-2 control-label">Kategoriler</label>
                        <div class="col-md-2">
                            <div id="spinner1">
                                <select class="form-control m-bot15" name="KategoriID">
                                    @foreach (var ktg in ViewBag.Kategoriler)
                                    {
                                        <option value="@ktg.Id">@ktg.Adi</option>
                                    }

                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group has-warning">
                        <label class="col-lg-2 control-label">Markalar</label>
                        <div class="col-md-2">
                            <div id="spinner1">
                                <select class="form-control m-bot15" name="MarkaID">
                                    @foreach (var mrk in ViewBag.Markalar)
                                    {
                                        <option value="@mrk.Id">@mrk.Adi</option>
                                    }

                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

