
@{
    ViewBag.Title = "OzellikDegerEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model IEnumerable<ZeonTicaret.WebUI.Models.OzellikTip>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Özellik Değer Ekle
            </header>
            <div class="panel-body">
                <form class="form-horizontal tasi-form" action="/Admin/OzellikDegerEkle/" method="post">
                    <div class="form-group has-warning">
                        <label class="col-lg-2 control-label">Özellik Tip</label>
                        <div class="col-md-2">
                            <div id="spinner1">
                                <select class="form-control m-bot15" name="OzellikTipID">
                                    @foreach (var ozd in Model)
                                    {
                                        <option value="@ozd.Id">@ozd.Adi - @ozd.Kategori.Adi</option>
                                    }

                                </select>
                            </div>
                        </div>

                    </div> 
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Özellik Değer Adı</label>
                        <div class="col-sm-10">
                            <input type="text" name="Adi" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Açıklama</label>
                        <div class="col-sm-10">
                            <input type="text" name="Aciklama" class="form-control">
                        </div>
                    </div>

                    

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>